<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterActivity"
    android:background="@mipmap/login_bg"
    >

    <TextView
        android:id="@+id/ww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/but_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/jian"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/ww"

        />

    <TextView
        android:id="@+id/bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bb"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        >

        <EditText
            android:id="@+id/et_nickName_rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入昵称"
            android:textColorHint="#999999"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:textColor="#ffffff"

            />
        <EditText
            android:id="@+id/et_email_rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入邮箱账号"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/et_nickName_rg"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:textColorHint="#999999"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/et_pwd_rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:layout_below="@id/et_email_rg"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:textColorHint="#999999"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/et_pwd_rg"
            android:id="@+id/ll_id_rg"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/et_authCode_rg"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="请输入验证码"
                android:background="@drawable/edittext2"
                android:textColorHint="#999999"
                android:paddingLeft="20dp"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:layout_marginTop="2dp"
                />
            <Button
                android:id="@+id/but_setPwd_rg"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/button1"
                android:text="获取验证码"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号立即登录"
            android:textColor="#999999"
            android:layout_below="@id/ll_id_rg"
            android:layout_alignRight="@id/ll_id_rg"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/but_register_rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:layout_below="@id/tv_login_rg"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button2"
            android:backgroundTint="#FF72A1"
            android:layout_marginBottom="30dp"

            />
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>