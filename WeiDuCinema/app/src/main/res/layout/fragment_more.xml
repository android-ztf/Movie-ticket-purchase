<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#141931"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/rv_more"
        android:layout_marginVertical="40dp"

        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#76777D"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/jieshu_tv"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#76777D"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/jieshu_tv"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/jieshu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#76777D"
            android:text="额欧,没有更多啦!"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    </RelativeLayout>

</ScrollView>