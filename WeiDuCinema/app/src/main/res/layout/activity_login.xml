<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LoginActivity"
    android:background="@mipmap/login_bg"
    >

    <TextView
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/but_back_loign"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/jian"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/l"
        />


    <TextView
        android:id="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aa"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        >

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入邮箱账号"
            android:textColorHint="#999999"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/et_email"
            android:id="@+id/ll_id"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="请输入密码"
                android:background="@drawable/edittext2"
                android:textColorHint="#999999"
                android:paddingLeft="20dp"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:layout_marginTop="2dp"
                />
            <Button
                android:id="@+id/but_setPwd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/button1"
                android:text="忘记密码"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无账号立即注册"
            android:textColor="#999999"
            android:layout_below="@id/ll_id"
            android:layout_alignRight="@id/ll_id"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/but_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button2"
            android:backgroundTint="#FF72A1"
            android:text="登录"
            android:textColor="#ffffff"
            android:layout_below="@id/tv_register"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/but_login"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_below="@id/but_login"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#ffffff"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/but_wx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button2"
            android:backgroundTint="#50B674"
            android:src="@mipmap/weixin_copy"
            android:textColor="#ffffff"
            android:layout_below="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="30dp"
            />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>