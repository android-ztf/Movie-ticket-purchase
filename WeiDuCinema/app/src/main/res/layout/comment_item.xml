<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="#141931">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/to_rl"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_comment_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:failureImage="@mipmap/failure"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@mipmap/tx"
            app:progressBarAutoRotateInterval="5000"
            app:progressBarImage="@mipmap/zzjz"
            app:progressBarImageScaleType="centerInside"
            app:retryImage="@mipmap/cshi"
            app:retryImageScaleType="centerInside"
            app:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论人"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@id/sdv_comment_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论时间"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/to_rl"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <CheckBox
        android:id="@+id/cb_comment_great"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_comment_content"
        android:button="@null"
        android:background="@drawable/check_dianz"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/tv_hot_comment"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/hot_comment"
        android:layout_toRightOf="@id/cb_comment_great"
        android:layout_alignTop="@id/cb_comment_great"
        android:layout_marginLeft="20dp"
        android:text="热评"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@id/cb_comment_great"
        android:layout_alignParentRight="true"
        android:text="等20人觉得很赞"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_comment_num"
        android:layout_marginTop="20dp"
        android:background="#2B3046"
        />


</RelativeLayout>