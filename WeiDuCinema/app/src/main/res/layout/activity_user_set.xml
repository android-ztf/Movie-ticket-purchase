<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.mine.UserSetActivity"
    android:background="@color/bg"
    >

    <TextView
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/but_back_mineset"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/jian"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/l"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@id/l"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/but_clear_mineset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/utem_bg"
            android:text="清除缓存"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:paddingHorizontal="20dp"
            />
        <Button
            android:id="@+id/but_newversion_mineset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/utem_bg"
            android:text="版本更新"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:paddingHorizontal="20dp"
            android:drawableRight="@mipmap/dyp_jian"
            />
        <Button
            android:id="@+id/but_pwd_mineset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/utem_bg"
            android:text="重置密码"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@mipmap/dyp_jian"
            />
        <Button
            android:id="@+id/but_relogin_mineset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/utem_bg"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_clearsize_mineset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/l"
        android:text="mm"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:gravity="center"
        />

</RelativeLayout>