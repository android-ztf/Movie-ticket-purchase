<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141931">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/to_rl"
        >
    <TextView
        android:id="@+id/tv_location_cinema"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/dinwei"
        android:text="地址"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/iv_seek_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sosuo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_location_cinema"
        android:layout_alignBottom="@id/tv_location_cinema"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        />


    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_cinema"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/to_rl"
        android:layout_marginTop="20dp"
        android:background="@color/utem_bg"
        app:tabIndicatorColor="#E8185E"
        app:tabTextColor="#ffffff"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_cinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tl_cinema"
        android:layout_marginVertical="20dp"
        />




</RelativeLayout>