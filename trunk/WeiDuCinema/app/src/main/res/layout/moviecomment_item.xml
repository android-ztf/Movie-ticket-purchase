<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="#141931"
    android:id="@+id/to_rl"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tp_rl"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_moviecomment_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:failureImage="@mipmap/failure"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@mipmap/tx"
            app:progressBarAutoRotateInterval="5000"
            app:progressBarImage="@mipmap/zzjz"
            app:progressBarImageScaleType="centerInside"
            app:retryImage="@mipmap/cshi"
            app:retryImageScaleType="centerInside"
            app:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_moviecomment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论人"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@id/sdv_moviecomment_pic"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@id/sdv_moviecomment_pic"
            />
        <RatingBar
            android:id="@+id/rb_moviecomment_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignBottom="@id/sdv_moviecomment_pic"
            android:layout_toRightOf="@id/sdv_moviecomment_pic"
            android:layout_marginLeft="20dp"
            android:progressTint="@color/colorAccent"
            android:progressBackgroundTint="@color/white"
            android:secondaryProgressTint="@color/white"
            android:stepSize="0.5"
            android:rating="1"
            android:max="5"
            android:isIndicator="true"
            android:numStars="5"
            android:background="#141931"
            />
        <TextView
            android:id="@+id/tv_moviecomment_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0分"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@id/rb_moviecomment_star"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignBottom="@id/sdv_moviecomment_pic"
            />
        <TextView
            android:id="@+id/tv_moviecomment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论时间"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@id/sdv_moviecomment_pic"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_moviecomment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/tp_rl"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <CheckBox
        android:id="@+id/cb_moviecomment_great"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_moviecomment_content"
        android:button="@null"
        android:background="@drawable/check_dianz"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/tv_moviecomment_greatnum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/cb_moviecomment_great"
        android:layout_alignTop="@id/cb_moviecomment_great"
        android:layout_marginLeft="10dp"
        android:text="10086"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_moviecomment_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@id/cb_moviecomment_great"
        android:layout_alignParentRight="true"
        android:text="等20人进行了回复"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_moviecomment_num"
        android:layout_marginTop="20dp"
        android:background="#2B3046"
        />


</RelativeLayout>