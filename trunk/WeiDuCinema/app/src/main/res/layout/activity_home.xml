<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeActivity"
    android:background="#141931"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bw.movie.view.customview.NoScrollViewPager
            android:id="@+id/vp_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            />

        <RadioGroup
            android:id="@+id/rg_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#1C2243"
            >

            <RadioButton
                android:id="@+id/rb_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:textColor="#EE568A"
                android:background="@drawable/ss1"
                android:drawableLeft="@drawable/movie_select"
                android:gravity="center"
                android:text="电影"
                android:paddingLeft="10dp"
                />

            <RadioButton
                android:id="@+id/rb_cinema"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#EE568A"
                android:gravity="center"
                android:background="@drawable/ss1"
                android:layout_margin="15dp"
                android:drawableLeft="@drawable/cinema_select"
                android:paddingLeft="10dp"
                />
            <RadioButton
                android:id="@+id/rb_mine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#EE568A"
                android:gravity="center"
                android:background="@drawable/ss1"
                android:layout_margin="15dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/mine_select"

                />
        </RadioGroup>

    </RelativeLayout>



</RelativeLayout>