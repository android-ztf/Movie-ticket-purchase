<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utem_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pic_person"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        app:placeholderImage="@mipmap/zzjz"
        app:failureImage="@mipmap/failure"
        />
    <TextView
        android:id="@+id/tv_name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/sdv_pic_person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="姓名"
        />
    <TextView
        android:id="@+id/tv_fakername_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#89898C"
        android:layout_below="@id/tv_name_person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="姓名"
        android:visibility="gone"
        />

</RelativeLayout>